{
  "name": "monorepo-react-ssr",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/config-lerna-scopes": "^7.5.1",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run hook:lint",
      "pre-push": "npm run hook:test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "clean": "lerna clean --yes 2>/dev/null || :",
    "co": "npx git-cz",
    "hook:lint": "$npm_execpath run lerna:lint -- --since develop --parallel",
    "hook:test": "$npm_execpath run test -- --since develop --parallel",
    "lerna:clean": "lerna run clean 2>/dev/null || :",
    "lerna:lint": "lerna run lint",
    "lerna:test": "cross-env CI=true lerna run test",
    "lint": "$npm_execpath run lerna:lint -- --no-bail --stream",
    "purge": "$npm_execpath run lerna:clean && $npm_execpath run clean && rm -rf node_modules",
    "reset": "$npm_execpath run purge && $npm_execpath install",
    "test": "$npm_execpath run lerna:test -- --no-bail --stream"
  }
}
